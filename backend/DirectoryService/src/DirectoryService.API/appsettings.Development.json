{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.AspNetCore.Hosting": "Information",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.EntityFrameworkCore.Query": "Debug",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
        "System": "Information",
        "System.Net.Http.HttpClient": "Information",
        "Hangfire": "Information",
        "Application": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {SourceContext:l} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "Debug"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ConnectionStrings": {
    "DirectoryServiceDb": "Server=localhost;Port=5432;Username=admin;Password=admin;Database=directory_service_db",
    "Redis": "localhost:6379"
  },
  "SoftDeleteSettings": {
    "Years": 0,
    "Months": 0,
    "Days" : 1,
    "Hours": 9,
    "Minutes": 24,
    "Seconds": 0
  },
  "Swagger": {
    "Title": "Directory Service",
    "Description": "API для работы c подразделениями, локациями и позициями.",
    "Contact": {
      "Name": "Danil Grigorev",
      "Email": "danilg467@gmail.com"
    },
    "Versions": [
    "1"
    ]
  },
  "AllowedHosts": "*",
  "FileServiceOptions" : {
    "Url": "http://localhost:5201/api",
    "TimeoutSeconds": 7
  }
}
